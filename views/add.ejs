<!DOCTYPE html>
<html lang="en">
  <%- include('layout/metaData') %>

  <body>
    <%- include('layout/header') %>

    <div class="container">
      <h1 class="m-3"><%= pageTitle %></h1>

      <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
          <div class="card shadow mb-4">
            <div class="card-header bg-primary">
              <h3 class="text-light">Add a new item</h3>
            </div>
            <div class="card-body">
              <div class="m-3">
                <form action="/add" method="post" id="add-item-form">
                  <label for="name" class="form-label">Name:</label>
                  <input
                    type="text"
                    name="name"
                    id="name"
                    class="form-control"
                    required
                  /><br />

                  <label for="quantity" class="form-label">Quantity:</label>
                  <input
                    type="number"
                    name="quantity"
                    id="quantity"
                    class="form-control"
                    required
                  /><br />

                  <label for="price" class="form-label">Price:</label>
                  <input
                    type="number"
                    name="price"
                    id="price"
                    class="form-control"
                    step="0.01"
                    required
                  /><br />

                  <label for="description" class="form-label"
                    >Description:</label
                  ><br />
                  <textarea
                    name="description"
                    id="description"
                    rows="4"
                    cols="50"
                    class="form-control"
                  ></textarea
                  ><br />

                  <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-md">
                      Submit
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('layout/footer') %>
  </body>
</html>
