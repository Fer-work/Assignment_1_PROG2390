<!DOCTYPE html>
<html lang="en">
  <%- include('layout/metaData') %>

  <body>
    <%- include('layout/header') %>

    <div class="container">
      <h1 class="m-3"><%= pageTitle %></h1>

      <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
          <div class="card shadow mb-4">
            <div class="card-header bg-warning">
              <h3 class="text-light">Edit item</h3>
            </div>
            <div class="m-3">
                <form action="/update/<%= item.inventory_id %>" method="post">
                  <label for="name" class="form-label my-1">Name:</label>
                  <input
                    type="text"
                    name="name"
                    id="name"
                    class="form-control mb-2"
                    value="<%= item.name %>"
                    required
                  />
          
                  <label for="quantity" class="form-label my-1">Quantity:</label>
                  <input
                    type="number"
                    name="quantity"
                    id="quantity"
                    class="form-control mb-2"
                    value="<%= item.quantity %>"
                    required

                  />
          
                  <label for="price" class="form-label my-1">Price:</label>
                  <input
                    type="number"
                    name="price"
                    id="price"
                    class="form-control mb-2"
                    value="<%= item.price %>"
                    step="0.01"
                    required

                  />
          
                  <label for="description" class="form-label my-1">Description:</label>
                  <textarea
                    name="description"
                    id="description"
                    rows="4"
                    cols="50"
                    class="form-control mb-2"
                  >
                  <%=item.description.trim()%>
                  </textarea>

                  <div class="d-grid">
                    <button type="submit" class="btn btn-warning btn-md text-white">
                      Submit
                    </button>
                  </div>
                </form>
          </div>
        </div>
      </div>
    </div>

    <%- include('layout/footer') %>
  </body>
</html>
